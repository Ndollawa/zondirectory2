{
  "canisters": {
    "backend": {
      "main": "src/backend/main.mo",
      "type": "motoko",
      "dependencies": [
        "order",
        "payments",
        "personhood",
        "CanDBIndex",
        "NacDBIndex",
        "internet_identity",
        "ic_eth"
      ]
    },
    "ic_eth": {
      "type": "rust",
      "candid": "src/ic_eth/ic_eth.did",
      "package": "ic_eth"
    },  
    "CanDBIndex": {
      "main": "src/storage/CanDBIndex.mo",
      "type": "motoko",
      "dependencies": ["ic_eth"]
    },
    "NacDBIndex": {
      "main": "src/storage/NacDBIndex.mo",
      "type": "motoko",
      "dependencies": ["ic_eth"]
    },
    "CanDBPartition": {
      "main": "src/storage/CanDBPartition.mo",
      "type": "motoko",
      "dependencies": ["ic_eth"]
    },
    "NacDBPartition": {
      "main": "src/storage/NacDBPartition.mo",
      "type": "motoko",
      "dependencies": ["ic_eth"]
    },  
    "internet_identity": {
      "type": "custom",
      "candid": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity.did",
      "wasm": "https://github.com/dfinity/internet-identity/releases/latest/download/internet_identity_dev.wasm.gz",
      "shrink": false,
      "remote": {
        "candid": "internet_identity.did",
        "id": {
          "ic": "rdmx6-jaaaa-aaaaa-aaadq-cai"
        }
      }
    },
    "order": {
      "main": "src/backend/canisters/order/main.mo",
      "type": "motoko",
       "dependencies": ["CanDBIndex"]
    },
    "personhood": {
      "main": "src/backend/canisters/personhood/main.mo",
      "type": "motoko",
      "dependencies": ["ic_eth", "CanDBIndex"]
    },
    "frontend": {
      "frontend": {
        "entrypoint": "src/frontend/src/index.html"
      },
      "dependencies": ["backend","internet_identity"],
      "source": [
        "src/frontend/assets",
        "dist/frontend/"
      ],
      "type": "assets"
    },
    "payments": {
      "main": "src/backend/canisters/payments/main.mo",
      "type": "motoko",
      "dependencies": ["pst"]
    },
    "pst": {
      "main": "src/backend/canisters/pst/main.mo",
      "type": "motoko"
    },
    "auth": {
      "main": "src/backend/canisters/auth/main.mo",
      "type": "motoko"
    },
    "items": {
      "main": "src/backend/canisters/items/main.mo",
      "type": "motoko"
    },
    "folders": {
      "main": "src/backend/canisters/folders/main.mo",
      "type": "motoko"
    }
  },
  "defaults": {
    "build": {
      "args": "-fshared-code --actor-idl .dfx/local/lsp",
      "packtool": "mops sources"
    }
  },
  "output_env_file": ".env",
  "version": 1,
  "networks": {
    "local": {
      "bind": "localhost:8001",
      "type": "ephemeral"
    }
  }
}